{
  "$schema": "https://www.partykit.io/schema.json",
  "name": "party-server",
  "main": "src/server.ts",
  "serve": {
    "path": "public",
    "build": "src/client.ts",
    "cors": {
      "origins": ["*"],
      "methods": ["GET", "POST", "OPTIONS"],
      "credentials": true
    }
  },
  "vars": {
    "DEBUG": "true"
  }
}
